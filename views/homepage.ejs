<h1>MY TO DO LIST</h1>

<%# <form method="POST" action="/update>">%>
<form action = "/" method = "POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" name="description" id="description" placeholder="description">
  </div>
  <div class="form-group">
    <label for="completed">Completed</label>
    <input type="text" name="completed" id="completed" placeholder="completed">
  </div>
  <button type="submit">Submit</button>
</form>

<% obj.forEach(function (list) { %>
    <ul>
      <li>Name: <%-list.name%></li>
      <li>Description: <%-list.description%></li>
      <li>Completed <%-list.completed%></li>
      <li>Id <%-list.id%></li>
      <form method="POST" action="/update/<%-list.id%>">
          <button value= <%-list.id%> name = "id" type = "submit">Update</button>
      </form>

      <form method="POST" action="/<%-list.id%>?_method=DELETE">
          <button value= <%-list.id%> name = "id" type = "submit">Remove</button>
      </form>
    </ul>
  <% })%>
