        <input type="text" name="description" id="description" placeholder="description">
      </div></td>
      <td><%-list.completed%>
      <!-- </td> -->
      <div class="form-group">
        <label for="completed"></label>
        <input type="text" name="completed" id="completed" placeholder="completed">
      </div></td>
      <!-- <td><%-list.id%></td> -->
      <td><button name = "id" value = <%-list.id%> type = "submit">Update</button></td>
    </form></td>
      <td><form method="POST" action="/<%-list.id%>?_method=DELETE">
        <button value= <%-list.id%> name = "id" type = "submit">Remove</button></td>
      <td></form>
    </tr>
  <% })%>
